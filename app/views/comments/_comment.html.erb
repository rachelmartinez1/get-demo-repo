  <div class="comment-card">
    <div class="card">
      <div class="card-block">
        <div class="row">
          <div class="column-md-2">
            <%= gravatar_helper comment.user %>
          </div>
          <div class="comment-area">
            <div class="column-md-10">
              <div>
                <%= comment.content %>
              </div>
              <div class="comment-attribution"> 
                 Comment posted by <span class="name-decor"><%= comment.user.first_name %> <%= comment.user.last_name %></span> <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>